<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/mit"
            android:background="#202C35"/>

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:paddingBottom="10sp"
            android:text="@string/vis"
            android:textAlignment="center"
            android:background="@android:color/black"
            android:textColor="#03A9F4"
            android:textSize="22sp"
            android:layout_marginBottom="10sp"
            android:textStyle="italic" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/black"
            android:paddingTop="20dp"
            app:cardCornerRadius="12sp">

        <TextView
            android:layout_width="374dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/vision"
            android:textAlignment="center"
            android:textColor="#FAF8F8"
            android:textStyle="italic"
            android:layout_marginEnd="12dp" />
        </androidx.cardview.widget.CardView>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="12dp"
                    android:layout_marginStart="12dp"
                    app:cardBackgroundColor="@android:color/holo_green_light"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="12dp">

                    <ImageView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flip3"
                        android:layout_gravity="fill"/>

            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="12dp"
                    android:layout_marginStart="12dp"
                    app:cardBackgroundColor="@android:color/holo_orange_light"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="12dp">

                    <ImageView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flip4"
                        android:layout_gravity="fill"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="12dp"
                    android:layout_marginStart="12dp"
                    app:cardBackgroundColor="#0288D1"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="12dp">

                <ImageView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flip2"
                    android:layout_gravity="fill"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="12dp"
                    android:layout_marginStart="12dp"
                    app:cardBackgroundColor="@android:color/holo_red_light"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="12dp">

                    <ImageView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flip5"
                        android:layout_gravity="fill"/>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="12dp"
                    android:layout_marginStart="12dp"
                    app:cardBackgroundColor="@android:color/holo_purple"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="284dp"
                        android:layout_gravity="fill"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/flip6" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="12dp"
                    android:layout_marginStart="12dp"
                    app:cardBackgroundColor="@android:color/primary_text_dark"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="12dp">

                <ImageView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flip1"
                    android:layout_gravity="fill"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>


        <TextView
            android:id="@+id/Courses"
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:text="@string/courses"
            android:background="#0E0E0E"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:textStyle="italic"
            tools:ignore="RtlSymmetry" />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="fill"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="12dp"
            app:cardBackgroundColor="@android:color/holo_green_light"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textColor="@android:color/holo_blue_dark"
                android:background="@android:color/black"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/technology"
                android:textSize="22sp"
                android:fontFamily="helvetica"
                android:textStyle="italic"/>

            <ImageView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cs"
                android:layout_gravity="fill"/>
            <TextView
                android:id="@+id/get1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:gravity="center_horizontal"
                android:text="@string/get_course"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                android:background="#ED32DF94"
                android:fontFamily="helvetica"
                android:textStyle="italic"/>

        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="300dp"
                app:cardCornerRadius="12dp"
                android:layout_gravity="fill"
                android:layout_marginStart="12dp"
                app:cardBackgroundColor="@android:color/holo_orange_light"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/holo_blue_dark"
                    android:background="@android:color/black"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/management"
                    android:textSize="22sp"
                    android:fontFamily="helvetica"
                    android:textStyle="italic"/>
                <ImageView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/market"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/get2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="@string/get_course"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"
                    android:background="#ED32DF94"
                    android:fontFamily="helvetica"
                    android:textStyle="italic"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="fill"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="12dp"
                app:cardBackgroundColor="#5D7C73"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/holo_blue_dark"
                    android:background="@android:color/black"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/diploma"
                    android:textSize="22sp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="helvetica"
                    android:textStyle="italic"/>
                <ImageView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dipl"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/get3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="@string/get_course"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"
                    android:background="#ED32DF94"
                    android:fontFamily="helvetica"
                    android:textStyle="italic"/>

            </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/explore"
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:text="@string/explore_more"
            android:background="@android:color/black"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:outlineSpotShadowColor="@android:color/black"
            tools:targetApi="p"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry" />

    <HorizontalScrollView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacts"
                android:layout_marginRight="12dp"
                android:background="#121111"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginEnd="12dp" />
            <Button
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="@string/alumni"
                android:background="#121111"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginEnd="12dp" />
            <Button
                android:id="@+id/placement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placements"
                android:layout_marginRight="12dp"
                android:background="#121111"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginEnd="12dp" />
            <Button
                android:id="@+id/news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news"
                android:layout_marginRight="12dp"
                android:background="#121111"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginEnd="12dp" />
            <Button
                android:id="@+id/campus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/campus"
                android:background="#121111"
                android:layout_marginRight="12dp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginEnd="12dp" />


        </LinearLayout>
    </HorizontalScrollView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

