<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FBC02D"
    tools:context=".StudentsActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FBC02D"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="@string/login_to_your_account"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button2"
            android:layout_width="129dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="#050505"
            android:gravity="center"
            android:onClick="Link"
            android:text="@string/cli"
            android:textColor="#F3F0F0"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/check_syllabus"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button3"
            android:layout_width="129dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="#050505"
            android:gravity="center"
            android:onClick="Syllabus"
            android:text="@string/check_syllabus"
            android:textColor="#F3F0F0"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/exams_notification"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button4"
            android:layout_width="129dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="#050505"
            android:gravity="center"
            android:onClick="Exams"
            android:text="@string/chec"
            android:textColor="#F3F0F0"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/check_results"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button5"
            android:layout_width="129dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="#050505"
            android:gravity="center"
            android:onClick="Results"
            android:text="@string/results"
            android:textColor="#F3F0F0"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/know_about_fees"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button6"
            android:layout_width="129dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="#050505"
            android:gravity="center"
            android:onClick="Fee"
            android:text="@string/fees_struc"
            android:textColor="#F3F0F0"
            android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="@string/feesub"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="129dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="#050505"
                    android:gravity="center"
                    android:onClick="Fee1"
                    android:text="@string/submit_your_fees"
                    android:textColor="#F3F0F0"
                    android:textStyle="italic"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/college_enquiry"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button7"
            android:layout_width="129dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="#050505"
            android:gravity="center"
            android:onClick="Enquiry"
            android:text="@string/cl"
            android:textColor="#F3F0F0"
            android:textStyle="italic"
            android:layout_marginBottom="40dp"/>

        </LinearLayout>

</ScrollView>
</LinearLayout>